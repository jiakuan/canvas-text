<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='demo'>
  <inherits name='com.google.gwt.user.User'/>

  <inherits name="elemental2.dom.Dom"/>
  <inherits name="jsinterop.base.Base"/>

  <inherits name='org.docstr.gwt.canvastext.CanvasText'/>

  <entry-point class='org.docstr.gwt.canvastext.demo.client.Demo'/>

  <source path='client'/>
  <source path='shared'/>

  <!--
    Single Script Linker is required for generating script for Chrome
    extension. For more information, please see:
    https://www.gwtproject.org/doc/latest/DevGuideLinkers.html
    https://github.com/gwtproject/gwt/blob/main/user/src/com/google/gwt/useragent/UserAgent.gwt.xml

    For `user.agent`, use the following values:
    * Chrome - safari
    * Firefox - gecko1_8
  -->
  <set-property name="user.agent" value="safari"/>

  <!-- Disable csso for super dev, and enable it for prod build -->
  <define-linker name="csso"
      class="org.docstr.gwt.canvastext.demo.linker.CustomSingleScriptLinker"/>
  <add-linker name="csso"/>
  <!-- <add-linker name="sso"/>-->

  <!-- <set-configuration-property name='xsiframe.failIfScriptTag' value='false'/>-->
</module>
